        <textarea id="address" name="address" rows="4" cols="40"></textarea><br></td></tr>
    <tr><td><input type="submit" value="Update"></td></tr>   
     </table>

    </form>

    <h2>Delete</h2>
    <form action="/delete" method="post">
        <table>
            <tr><td><label for="uname-delete">Name</label></td><td>
        <input type="text" id="uname-delete" name="username"><br></td></tr>

        <tr><td><input type="submit" value="Delete"></td></tr>
        </table>
    </form>
</body>
</html>
